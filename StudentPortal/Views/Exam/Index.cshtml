@{
    ViewData["Title"] = "Exams";
    ViewBag.Exam = true;
    ViewBag.Removebg = true;

    Dictionary<string, string> exams = (Dictionary<string, string>)ViewData["Exams"];
}

<div class="form-block">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-8 col-md-8 p-sm-0">
                <div class="ugf-form-block-header">
                    <h1>Choose Exam</h1>
                </div>
                <div class="ugf-input-block">
                    <form asp-action="TakeExam">
                        <div asp-validation-summary="All" class="text-danger">@ViewData["error"]</div>

                        <div class="row form-group">
                            <div class="col-md-12 col-12">
                                <div class="country-select">
                                    <label for="inputCountry">
                                        <i class="las la-question-circle"></i>
                                    </label>
                                    <div class="select-input choose-country">
                                        <span></span>
                                        <select id="fk_Exam" name="fk_Exam" class="form-control" required>
                                            <option value="">Please Select</option>
                                            @if (exams != null && exams.Any())
                                            {
                                                foreach (var exam in exams)
                                                {
                                                    <option value="@exam.Key">@exam.Value</option>
                                                }
                                            }
                                        </select>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <button type="submit" class="btn">Take Exam</button>
                        <a href="#" class="login-again-btn bg-warning mt-3 text-center filter_exams_btn">Filter Exam Results</a>
                    </form>
                </div>
            </div>
            <div class="col-lg-8 col-md-8 p-sm-0 mt-4">
                <hr />
                <div class="ugf-form-block-header">
                    <h1>Exam Results</h1>
                </div>
                <div class="ugf-input-block">
                    <table class="table table-striped table-hover">
                        <thead>
                            <tr class="text-center">
                                <th scope="col">Exam</th>
                                <th scope="col">Question Count</th>
                                <th scope="col">Success Count</th>
                                <th scope="col">Failed Count</th>
                                <th scope="col">Exam At</th>
                            </tr>
                        </thead>
                        <tbody class="tbody-exams"></tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts
{
    <script src="~/assets/js/code.jquery.com_jquery-3.6.0.min.js"></script>
    <script src="~/assets/js/pages/exam-index.js"></script>
}
